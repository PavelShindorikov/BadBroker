{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "vue-shim.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [ "./src/*" ]
    }
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
